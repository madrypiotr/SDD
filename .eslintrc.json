{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    },
    "globals": {
      "EmailError": true,
      "Kwestia": true,
      "Languages": true,
      "Message": true,
      "Parametr": true,
      "ParametrDraft": true,
      "Posts": true,
      "Powiadomienie": true,
      "Raport": true,
      "Mongo": false,
      "Meteor": false
    }
}
